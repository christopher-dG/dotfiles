# terminal
super + Return
  alacritty

# program launcher/window switcher
super + Tab
  rofi -theme ashes -combi-modi window,run -show combi

# reload this configuration
super + Escape
  pkill -USR1 -x sxhkd

# quit/restart bspwm
super + alt + {q,r}
  bspc {quit,wm --restart}

# close a window
super + shift + q
  bspc node --close

# toggle window states
super + f
  bspc node --state '~fullscreen'
super + shift + @space
  bspc node --state '~floating'

# move focus
super + {j,k,l,semicolon}
	bspc node --focus {west,south,north,east}

# move windows
super + shift + {j,k,l,semicolon}
	bspc node --swap {west,south,north,east}

# focus desktop
super + {1-9,0}
  bspc desktop --focus '^{1-9,10}'

# move window to desktop
super + shift + {1-9,0}
  bspc node --to-desktop '^{1-9,10}' --follow

# resize windows
super + ctrl + {j,k,l,semicolon}
	bspc node --resize {left -20 0,bottom 0 20,top 0 -20,right 20 0}
super + ctrl + shift + {j,k,l,semicolon}
	bspc node --resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node --move {-20 0,0 20,0 -20,20 0}
